#include<stdio.h>
void main()
{
    int a,b,sum,diff,prod,rem;
    float quot;
    printf("enter the first number:");
    scanf("%d",&a);
    printf("enter the second number:");
    scanf("%d",&b);
    sum=a+b;
    printf("\n the sum is %d",sum);
    diff=a-b;
    printf("\n the difference is %d",diff);
    prod=a*b;
    printf("\n the product is %d",prod);
    rem=a%b;
    printf("\n the reminder is %d",rem);
    quot=a/b;
    printf("\n the quotcient is %f",quot);
}
