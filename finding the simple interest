#include<stdio.h> 
int main()
{
    int p,t;
    float r,si;
    printf("enter the principal amount: ");
    scanf("%d",&p);
    printf("\nenter the time: ");
    scanf("%d",&t);
    printf("\nenter the rate of interest: ");
    scanf("%f",&r);
    si=(p*t*r)/100;
    printf("the si unit is %f",si);
}
